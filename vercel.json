{
    "version": 2,
    "builds": [
      { "src": "index.html", "use": "@vercel/static" },
      { "src": "api/**/*.js", "use": "@vercel/node" }
    ],
    "routes": [
      { "src": "/api/.*", "dest": "/api/:splat" },
      { "src": "/(.*)", "dest": "/index.html" }
    ],
    "env": {
      "API_KEY": "@vite_openai_api_key",
      "API_URL": "@vite_openai_api_url"
    }
  }
  